case "$PLATFORM" in
  'osx' )
    URL="https://swift.org/builds/swift-4.2.1-release/xcode/swift-4.2.1-RELEASE/swift-4.2.1-RELEASE-osx.pkg"
    ;;

  'ubuntu14.04' )
    URL="https://swift.org/builds/swift-4.2.1-release/ubuntu1404/swift-4.2.1-RELEASE/swift-4.2.1-RELEASE-ubuntu14.04.tar.gz"
    ;;

  'ubuntu16.04' )
    URL="https://swift.org/builds/swift-4.2.1-release/ubuntu1604/swift-4.2.1-RELEASE/swift-4.2.1-RELEASE-ubuntu16.04.tar.gz"
    ;;

  'ubuntu18.04' )
    URL="https://swift.org/builds/swift-4.2.1-release/ubuntu1804/swift-4.2.1-RELEASE/swift-4.2.1-RELEASE-ubuntu18.04.tar.gz"
    ;;

  'ubuntu20.04')
    echo
    echo " !     Swift 4.2.1 does not support Ubuntu 20.04."
    echo " !     Please update your project to a more recent version of Swift."
    echo " !"
    echo " !     You can also downgrade your stack for the time being (not recommended),"
    echo " !     using the 'heroku stack:set' command or the dashboard."
    echo
    exit 1
    ;;

  * )
    ;;
esac
